{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@design-system/*": [
        "src/design-system/*"
      ],
      "@components/*": [
        "src/design-system/components/*"
      ],
      "@hooks/*": [
        "src/shared/hooks/*"
      ],
      "@services/*": [
        "src/shared/services/*"
      ],
      "@utils/*": [
        "src/shared/utils/*"
      ],
      "@store/*": [
        "src/shared/store/*"
      ],
      "@apps/*": [
        "src/apps/*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}

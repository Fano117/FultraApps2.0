{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@design-system/*": [
        "src/design-system/*"
      ],
      "@components/*": [
        "src/design-system/components/*"
      ],
      "@hooks/*": [
        "src/shared/hooks/*"
      ],
      "@services/*": [
        "src/shared/services/*"
      ],
      "@utils/*": [
        "src/shared/utils/*"
      ],
      "@store/*": [
        "src/shared/store/*"
      ],
      "@apps/*": [
        "src/apps/*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
